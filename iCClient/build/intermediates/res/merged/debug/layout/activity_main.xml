<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0672a8"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/button_ValidateCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/mono"
        android:text="@string/button_ValidateCard"
        android:textColor="#FEF4E2" />

    <Button
        android:id="@+id/button_ExitSystem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/exit"
        android:text="@string/button_ExitSystem"
        android:textColor="#FEF4E2" />

    <EditText
        android:id="@+id/editText_log"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:ems="10"
        android:focusable="false"
        android:gravity="top|left"
        android:inputType="textMultiLine"
        android:minHeight="500dp"
        android:textColor="#B0FB04" >
        
<!--        android:textAlignment="textStart" -->
        
        <requestFocus />
    </EditText>

</LinearLayout>